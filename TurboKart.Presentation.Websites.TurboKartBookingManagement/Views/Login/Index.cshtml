@model TurboKart.Presentation.Websites.TurboKartBookingManagement.Models.LoginModel;
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row justify-content-center mt-5">
    <!-- Title  -->
    <div class="col-12 text-center mb-3">
        <h1>Booking Management Login</h1>
    </div>
    <div class="col-12 col-md-6">
        <!-- Login Form  -->
        <form method="post" class="row">
            <!-- Username Input -->
            <div class="col-12">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="floatingName" asp-for="Username" required>
                    <label for="floatingName">Username</label>
                </div>
            </div>
            <!-- Password Input -->
            <div class="col-12">
                <div class="form-floating mb-3">
                    <input type="password" class="form-control" id="floatingPassword" asp-for="Password" required>
                    <label for="floatingPassword">Password</label>
                </div>
            </div>
            <!-- Submit Button -->
            <div class="col-12">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        </form>
    </div>
</div>